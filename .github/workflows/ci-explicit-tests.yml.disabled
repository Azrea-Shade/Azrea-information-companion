name: CI â€” explicit Build & Test (Windows)

on:
  push:
    branches:
      - 'testing/**'
      - 'testing/v1.0.0'
  pull_request:
    branches:
      - 'testing/**'
      - 'testing/v1.0.0'

jobs:
  build-and-test:
    runs-on: windows-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4

      - name: Setup .NET 8
        uses: actions/setup-dotnet@v3
        with:
          dotnet-version: '8.0.x'

      - name: Restore, Build and Test (explicit)
        shell: pwsh
        run: |
          $sln = (Get-ChildItem -Path . -Recurse -Filter *.sln -ErrorAction SilentlyContinue | Select-Object -First 1)
          if (-not $sln) { Write-Error "No .sln found in repo; please add your solution file."; exit 1 }
          Write-Host "Using solution: $($sln.FullName)"
          dotnet restore $sln.FullName
          dotnet build $sln.FullName -c Release --no-restore

          # prefer tests/Unit/Unit.csproj, else first *Tests.csproj
          $testproj = (Get-ChildItem -Path . -Recurse -Filter 'Unit.csproj' -ErrorAction SilentlyContinue | Select-Object -First 1)
          if (-not $testproj) {
            $testproj = (Get-ChildItem -Path . -Recurse -Filter '*Tests.csproj' -ErrorAction SilentlyContinue | Select-Object -First 1)
          }
          if (-not $testproj) { Write-Error "No test project (Unit.csproj or *Tests.csproj) found."; exit 1 }
          Write-Host "Running tests in: $($testproj.FullName)"
          dotnet test $testproj.FullName -c Release --no-build --verbosity normal
