<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- Dark base -->
  <SolidColorBrush x:Key="Bg.Brush"           Color="#0B0F1A"/>
  <SolidColorBrush x:Key="Surface.Brush"      Color="#101525"/>
  <SolidColorBrush x:Key="SurfaceAlt.Brush"   Color="#141A2A"/>
  <SolidColorBrush x:Key="Border.Brush"       Color="#1F2A3A"/>

  <!-- Text -->
  <SolidColorBrush x:Key="Text.Primary"       Color="#FFFFFFFF"/>
  <SolidColorBrush x:Key="Text.Secondary"     Color="#D0D7E2"/>
  <SolidColorBrush x:Key="Text.Subtle"        Color="#9AA3B2"/>
  <SolidColorBrush x:Key="Text.Disabled"      Color="#5F6A7A"/>

  <!-- Accents -->
  <SolidColorBrush x:Key="Accent.Brush"       Color="#0A84FF"/>  <!-- macOS blue -->
  <SolidColorBrush x:Key="Success.Brush"      Color="#30D158"/>
  <SolidColorBrush x:Key="Warning.Brush"      Color="#FFD60A"/>
  <SolidColorBrush x:Key="Danger.Brush"       Color="#FF453A"/>

  <!-- Overlays -->
  <SolidColorBrush x:Key="Overlay.Hover"      Color="#0FFFFFFF"/>
  <SolidColorBrush x:Key="Overlay.Pressed"    Color="#1AFFFFFF"/>

  <!-- Common pens -->
  <Pen x:Key="Border.Pen" Brush="{StaticResource Border.Brush}" Thickness="1"/>

</ResourceDictionary>
