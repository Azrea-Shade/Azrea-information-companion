<UserControl x:Class="Presentation.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Background="#0b0f1a" Margin="8">
    <StackPanel>
      <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
        <TextBlock Text="Generate at (HH:mm):" Foreground="White" VerticalAlignment="Center"/>
        <TextBox Text="{Binding GenerateAt, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="8,0,0,0"/>
        <TextBlock Text="Notify at (HH:mm):" Foreground="White" VerticalAlignment="Center" Margin="16,0,0,0"/>
        <TextBox Text="{Binding NotifyAt, UpdateSourceTrigger=PropertyChanged}" Width="120" Margin="8,0,0,0"/>
        <TextBlock Text="Autostart:" Foreground="White" VerticalAlignment="Center" Margin="16,0,0,0"/>
        <ComboBox SelectedValue="{Binding Autostart}" Width="120" Margin="8,0,0,0">
          <ComboBoxItem Content="On"/>
          <ComboBoxItem Content="Off"/>
        </ComboBox>
        <Button Content="Save" Margin="16,0,0,0" Padding="12,6" Command="{Binding SaveCommand}"/>
      </StackPanel>
      <TextBlock Text="Changes are saved locally in the SQLite 'settings' table." Foreground="#DDFFFFFF"/>
    </StackPanel>
  </Grid>
</UserControl>
