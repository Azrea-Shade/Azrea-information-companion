<UserControl x:Class="Presentation.Views.FavoritesView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Background="#0b0f1a" Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
      <TextBox Text="{Binding NewTicker, UpdateSourceTrigger=PropertyChanged}" Width="180" />
      <Button Content="Add" Margin="8,0,0,0" Padding="12,6" Command="{Binding AddCommand}" />
      <Button Content="Remove Selected" Margin="8,0,0,0" Padding="12,6" Command="{Binding RemoveSelectedCommand}" />
    </StackPanel>

    <ListBox Grid.Row="1" ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedTicker}" />
  </Grid>
</UserControl>
