<UserControl x:Class="Presentation.Views.WatchlistView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Background="#0b0f1a" Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Toolbar -->
    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
      <TextBox Text="{Binding NewTicker, UpdateSourceTrigger=PropertyChanged}" Width="160" />
      <Button Content="Add" Margin="8,0,0,0" Padding="12,6" Command="{Binding AddCommand}" />
      <Button Content="Remove Selected" Margin="8,0,0,0" Padding="12,6" Command="{Binding RemoveSelectedCommand}" />
      <Button Content="Save All" Margin="8,0,0,0" Padding="12,6" Command="{Binding SaveAllCommand}" />
      <Button Content="Refresh Prices" Margin="8,0,0,0" Padding="12,6" Command="{Binding RefreshPricesCommand}" />
      <Button Content="Evaluate Alerts Now" Margin="8,0,0,0" Padding="12,6" Command="{Binding EvaluateAlertsNowCommand}" />
    </StackPanel>

    <!-- Grid -->
    <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="False" CanUserAddRows="False"
              HeadersVisibility="Column" IsReadOnly="False" SelectedItem="{Binding Selected}">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="*" />
        <DataGridTextColumn Header="Price"  Binding="{Binding Price, StringFormat=F2}" IsReadOnly="True" Width="120" />
        <DataGridTextColumn Header="Above"  Binding="{Binding Above, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" />
        <DataGridTextColumn Header="Below"  Binding="{Binding Below, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" />
        <DataGridTextColumn Header="Triggered" Binding="{Binding Triggered}" IsReadOnly="True" Width="120" />
      </DataGrid.Columns>
    </DataGrid>

    <!-- Footer -->
    <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Right" Margin="0,8,0,0">
      <TextBlock Text="Last updated:" Foreground="#DDFFFFFF" VerticalAlignment="Center"/>
      <TextBlock Text="{Binding LastUpdated}" Foreground="White" Margin="6,0,0,0" VerticalAlignment="Center"/>
    </StackPanel>
  </Grid>
</UserControl>
