<UserControl x:Class="Presentation.Views.AlertsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Background="#0b0f1a" Margin="8">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
      <TextBox Text="{Binding NewTicker, UpdateSourceTrigger=PropertyChanged}" Width="120" />
      <TextBox Text="{Binding NewAbove, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="8,0,0,0" />
      <TextBox Text="{Binding NewBelow, UpdateSourceTrigger=PropertyChanged}" Width="100" Margin="8,0,0,0" />
      <Button Content="Add" Margin="8,0,0,0" Padding="12,6" Command="{Binding AddCommand}" />
    </StackPanel>

    <DataGrid Grid.Row="1" ItemsSource="{Binding Items}" AutoGenerateColumns="False" HeadersVisibility="Column" CanUserAddRows="False">
      <DataGrid.Columns>
        <DataGridTextColumn Header="Ticker" Binding="{Binding Ticker}" Width="*" />
        <DataGridTextColumn Header="Above" Binding="{Binding Above}" Width="100" />
        <DataGridTextColumn Header="Below" Binding="{Binding Below}" Width="100" />
        <DataGridCheckBoxColumn Header="Enabled" Binding="{Binding Enabled}" Width="80" />
        <DataGridTemplateColumn Header="Actions" Width="120">
          <DataGridTemplateColumn.CellTemplate>
            <DataTemplate>
              <Button Content="Toggle" Padding="6,3" Command="{Binding DataContext.ToggleCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" CommandParameter="{Binding}" />
            </DataTemplate>
          </DataGridTemplateColumn.CellTemplate>
        </DataGridTemplateColumn>
      </DataGrid.Columns>
    </DataGrid>
  </Grid>
</UserControl>
