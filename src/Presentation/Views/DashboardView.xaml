<UserControl x:Class="Presentation.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Grid Background="#0b0f1a" Margin="8">
    <StackPanel>
      <TextBlock Text="{Binding Header}" FontSize="20" Foreground="White" FontWeight="Bold"/>
      <TextBlock Text="Phase 3 shell is active." Foreground="#DDFFFFFF" Margin="0,6,0,14"/>
      <StackPanel Orientation="Horizontal">
        <TextBlock Text="Database path:" Foreground="White" VerticalAlignment="Center"/>
        <TextBox Text="{Binding DbPath}" Margin="8,0,0,0" IsReadOnly="True" Width="520"/>
      </StackPanel>
    </StackPanel>
  </Grid>
</UserControl>
