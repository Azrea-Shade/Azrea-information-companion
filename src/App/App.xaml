<Application x:Class="AzreaCompanion.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Presentation;component/Theme.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Presentation;component/Theme/Colors.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Presentation;component/Theme/Typography.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Presentation;component/Theme/Controls.xaml"/>
        <ResourceDictionary Source="pack://application:,,,/Presentation;component/Theme/DataGrid.xaml"/>
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Resources/Colors.xaml" />
        <ResourceDictionary Source="Resources/Styles.xaml" />
      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>
