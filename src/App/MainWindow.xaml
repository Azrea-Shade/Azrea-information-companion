<Window x:Class="AzreaCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Azrea — Daily Stock &amp; Workflow Companion" Height="720" Width="1200" WindowStartupLocation="CenterScreen">
  <Grid Margin="16" Background="#0b0f1a">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>
    <TextBlock Text="{Binding Title}" FontSize="22" FontWeight="Bold" Foreground="White" Margin="0,0,0,12"/>
    <Border Grid.Row="1" Padding="12" CornerRadius="16" BorderThickness="1" BorderBrush="#22FFFFFF" Background="#0b0f1a">
      <StackPanel>
        <TextBlock Text="Morning Brief (stub)" FontSize="16" Foreground="White" Margin="0,0,0,8"/>
        <ItemsControl ItemsSource="{Binding BriefItems}">
          <ItemsControl.ItemTemplate>
            <DataTemplate>
              <TextBlock Foreground="White">
                <Run Text="• "/>
                <Run Text="{Binding}"/>
              </TextBlock>
            </DataTemplate>
          </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Separator Margin="0,12,0,12"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
          <TextBlock Text="Watchlist count:" Foreground="White" Margin="0,0,8,0"/>
          <TextBlock Text="{Binding WatchCount}" Foreground="White" FontWeight="Bold"/>
          <Button Content="Add MSFT" Margin="16,0,0,0" Padding="12,6" Command="{Binding AddMsftCommand}"/>
        </StackPanel>
      </StackPanel>
    </Border>
  </Grid>
</Window>
