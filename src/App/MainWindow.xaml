<Window x:Class="AzreaCompanion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Presentation.Views;assembly=Presentation"
        xmlns:Presentation="clr-namespace:Presentation;assembly=Presentation"
        Title="Azrea â€” Daily Stock &amp; Workflow Companion"
        Height="720" Width="1200"
        WindowStartupLocation="CenterScreen"
        Icon="Assets/Branding/icons/app.ico">
  <DockPanel Background="#0b0f1a">

    <!-- Top menu -->
    <Menu DockPanel.Dock="Top">
      <MenuItem Header="_File">
        <MenuItem Header="E_xit" Click="Exit_Click"/>
      </MenuItem>
      <MenuItem Header="_View">
        <MenuItem Header="_Dashboard" Command="{Binding GoDashboardCommand}"/>
        <MenuItem Header="_Watchlist" Command="{Binding GoWatchlistCommand}"/>
        <MenuItem Header="_Favorites" Command="{Binding GoFavoritesCommand}"/>
        <MenuItem Header="_Alerts"    Command="{Binding GoAlertsCommand}"/>
        <MenuItem Header="_Settings"  Command="{Binding GoSettingsCommand}"/>
      </MenuItem>
      <MenuItem Header="_Help">
        <MenuItem Header="_About..." Click="About_Click"/>
      </MenuItem>
    </Menu>

    <!-- Left nav: Border supplies Padding (StackPanel has no Padding) -->
    <Border DockPanel.Dock="Left"
            Width="180"
            Background="#101525"
            Padding="10">
      <StackPanel>
        <TextBlock Text="{Binding Title}" Foreground="White" FontSize="16" FontWeight="Bold" Margin="0,0,0,12"/>
        <Button Content="Dashboard" Margin="0,0,0,8" Command="{Binding GoDashboardCommand}" Padding="12,6"/>
        <Button Content="Watchlist" Margin="0,0,0,8" Command="{Binding GoWatchlistCommand}" Padding="12,6"/>
        <Button Content="Favorites" Margin="0,0,0,8" Command="{Binding GoFavoritesCommand}" Padding="12,6"/>
        <Button Content="Alerts"    Margin="0,0,0,8" Command="{Binding GoAlertsCommand}"    Padding="12,6"/>
        <Button Content="Settings"  Margin="0,0,0,8" Command="{Binding GoSettingsCommand}"  Padding="12,6"/>
      </StackPanel>
    </Border>

    <!-- Main content -->
    <ContentControl Margin="12" Content="{Binding CurrentViewModel}">
      <ContentControl.Resources>
        <DataTemplate DataType="{x:Type Presentation:DashboardViewModel}">
          <views:DashboardView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Presentation:WatchlistViewModel}">
          <views:WatchlistView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Presentation:FavoritesViewModel}">
          <views:FavoritesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Presentation:AlertsViewModel}">
          <views:AlertsView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type Presentation:SettingsViewModel}">
          <views:SettingsView/>
        </DataTemplate>
      </ContentControl.Resources>
    </ContentControl>

  </DockPanel>
</Window>
