<Window x:Class="AzreaCompanion.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About" Height="420" Width="600" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" Background="#121828" Icon="Assets/Branding/icons/app.ico">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,16">
      <Image Width="64" Height="64" Stretch="Uniform"
             Source="{Binding LogoPath}" Margin="0,0,12,0"/>
      <StackPanel>
        <TextBlock Text="{Binding AppName}" FontSize="20" FontWeight="Bold" Foreground="White"/>
        <TextBlock Text="{Binding Version}" FontSize="12" Foreground="#DDFFFFFF"/>
      </StackPanel>
    </StackPanel>

    <Border Grid.Row="1" Padding="12" CornerRadius="12" Background="#0b0f1a" BorderThickness="1" BorderBrush="#22FFFFFF">
      <TextBlock Foreground="White" TextWrapping="Wrap">
        This build runs on the testing branch. Branding is loaded from Assets/Branding/.
      </TextBlock>
    </Border>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,16,0,0">
      <Button Content="Close" Padding="14,6" Click="OnClose"/>
    </StackPanel>
  </Grid>
</Window>
